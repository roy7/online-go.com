.AdUnit {
    // here
    flex-grow: 0;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
    padding: 0.5rem;

    .ogs-cdm-zone-01-container, 
    .ogs-cdm-zone-02-container,
    .ogs-cdm-zone-03-container,
    .ogs-cdm-zone-04-container,
    .ogs-cdm-zone-05-container,
    .ogs-cdm-zone-06-container,
    {
        flex-shrink: 0;
        text-align: center;
        //background-color: rgba(0,0,255,0.1);
    }

    .ogs-cdm-zone-01-container, 
    .ogs-cdm-zone-04-container,
    .ogs-cdm-zone-05-container, {
        //height: 90px;
        //max-width: 728px;
        min-height: 90px;
        min-width: 728px;
    }

    .ogs-cdm-zone-02-container,
    .ogs-cdm-zone-03-container,
    .ogs-cdm-zone-06-container, {
        min-height: 250px;
        min-width: 300px;
        //max-width: 300px;
    }



    .turn-off-ads-note {
        min-height: 1rem;
        padding-bottom: 0.5rem;

        & a, &a:hover {
            themed color primary
        }
    }
}

@media (max-width: 728px) {
    .AdUnit {
        padding-left: 0;
        padding-right: 0;
        .ogs-cdm-zone-01-container, 
        .ogs-cdm-zone-04-container,
        .ogs-cdm-zone-05-container, {
            min-height: 50px;
            min-width: 320px;
            overflow: auto;
            //height: 90px;
            //max-width: 728px;
        }
    }
}
